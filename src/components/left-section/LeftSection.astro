---
import { twMerge } from 'tailwind-merge';
import SkillsList from '../skills/SkillsList.astro';
import { hardSkills, softSkills } from '../skills/skills';
import HeroImage from './HeroImage.astro';
import LanguageSection from './language-section/LanguageSection.astro';

interface Props {
  class: string;
}

const { class: classFromProps } = Astro.props;
---

<div class={twMerge('w-3xl bg-gray-200  shadow-xl dark:bg-black', classFromProps)}>
  <HeroImage />

  <div class="mt-10">
    <section>
      <h2 class="mb-4 text-2xl uppercase tracking-widest">Skills</h2>

      <SkillsList class="text-sm" list={hardSkills} />
      <SkillsList class="mt-4 text-sm" list={softSkills} />
    </section>

    <LanguageSection class="mt-10" />
  </div>
</div>
